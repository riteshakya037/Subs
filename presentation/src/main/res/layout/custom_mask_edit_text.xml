<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/custom_mask_edit_text_root"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="horizontal"
        android:focusable="true"
        >
    <TextView
            android:id="@+id/custom_mask_edit_text_mask"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            tools:text="$"
            style="@style/CreateSubForm.Row.EditText"
            />
    <EditText
            android:id="@+id/custom_mask_edit_text_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/custom_mask_edit_text_mask"
            android:gravity="center"
            tools:text="123123"
            style="@style/CreateSubForm.Row.EditText"
            android:layout_toEndOf="@id/custom_mask_edit_text_mask"
            />
</RelativeLayout>